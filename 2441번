import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		int N;
		N=sc.nextInt();
		for(int i=0;i<N;i++) {
			for(int k=0;k<i;k++) {
				System.out.print(" ");
			}
			for(int j=(N-i);j>=1;j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
